<?xml version="1.0" encoding="utf-8" ?>

<dialog width="80%" height="50%">
    <vbox width="100%" height="100%">

        <hbox width="100%">
			<dropdown id="edate" text="Select Date" type="date" />
			<number-stepper id="ehour" pos="12" step="1" min="0" max="24"  width="100%"/>
			<number-stepper id ="eminute" pos="0" step="1" min="0" max="59"  width="100%"/>
		</hbox>
		<hbox width="100%">
			<label text="Group:" verticalAlign="center"/>
			<label id="egroup" verticalAlign="center" width="100%" />
			<button id="groupsb" text="Select group" > </button>
		</hbox>
		
        <hbox width="100%" height="100%">
			<textarea id="etext" width="100%" height="100%" />
		</hbox>

    </vbox>

</dialog>